<main class='table'>
  <div class="table_center">
    <%= turbo_frame_tag "first_turbo_frame" do %>
      <div>
        <span>Title</span>
        <span>Done</span>
        <span>Edit</span>
        <span colspan="2"></span>
      </div>
    <% end %>
    <tbody>
      <%= turbo_frame_tag "second_frame" do %><% end %>
        <%= turbo_frame_tag @tasks do %>
          <div class="notice">
            <%= notice %>
          <div>
        <% @tasks.each do |task| %>
          <%= turbo_frame_tag task do %>
            <div>
              <span><%= task.title %></span>
              <span><%= task.done ?  'Completed' : 'Incomplete' %></span>
              <span><%= link_to 'Edit', edit_task_path(task) %></span>
              <span> <%= link_to "Show this task", task %></span>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
  </div>
  <div class ='new_botton_task'>
    <%= turbo_frame_tag "second_frame" do %>
      <%= link_to "New_task", new_task_path, data: { turbo_frame: "second_frame" }%>
    <% end %>
  </div>
</main>
