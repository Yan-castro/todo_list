<h1>Tasks</h1>
<%= notice %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Done</th>
      <th>Edit</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.done ?  'Completed' : 'Incomplete' %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td> <%= link_to "Show this task", task %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Task', new_task_path %>
